[Unit]
Description=webapp API
ConditionPathExists=/opt/webapp/.env
After=network.target

[Service]
Type=simple
User=csye6225
Group=csye6225
WorkingDirectory=/opt/webapp
ExecStart=/opt/webapp/venv/bin/python3 /opt/webapp/app.py
Restart=always
RestartSec=3
StandardOutput=file:/opt/webapp/logs/application.log
StandardError=file:/opt/webapp/logs/application.log

[Install]
WantedBy=multi-user.target
